<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ShoppingList.Views"
             x:Class="ShoppingList.Controls.GroupedProductsView">
    <CollectionView x:Name="GroupedProductsCollectionView" IsGrouped="True" GroupDisplayBinding="{Binding Name}">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="20" Margin="10,5" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <views:ProductItemView />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>
