<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shopping_List.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Shopping_List"
    Shell.FlyoutBehavior="Disabled"
    Title="Shopping_List">

    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate views:FileChoice}" />
    <ShellContent
        Title="Products"
        ContentTemplate="{DataTemplate views:Products}" />
    <ShellContent
        Title="AddProduct"
        ContentTemplate="{DataTemplate views:AddProduct}" />

</Shell>
