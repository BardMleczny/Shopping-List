<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ShoppingList">

    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate views:FileChoice}" />
    <ShellContent
        Title="All Products"
        ContentTemplate="{DataTemplate views:AllProducts}" />
    <ShellContent
        Title="All Products"
        ContentTemplate="{DataTemplate views:ProductsToBuy}" />
    <ShellContent
        Title="All Products"
        ContentTemplate="{DataTemplate views:ProductsFromShop}" />
    <ShellContent
        Title="Add Product"
        ContentTemplate="{DataTemplate views:AddProduct}" />

</Shell>
