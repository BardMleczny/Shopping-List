<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.FileChoice"
             Title="FileChoice"
             BackgroundColor="#f7f7f7">
    <VerticalStackLayout Padding="30" Spacing="25">
        <Label Text="Choose an option:"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333333" />

        <Button Text="Use Base XMLs"
                Clicked="OnUseBaseXmlsClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                Padding="15"
                FontSize="18"
                HorizontalOptions="Fill" />

        <Button Text="Import Products XML"
                Clicked="OnImportProductsXmlClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                Padding="15"
                FontSize="18"
                HorizontalOptions="Fill" />

        <BoxView HeightRequest="50" BackgroundColor="Transparent" />

    </VerticalStackLayout>
</ContentPage>
