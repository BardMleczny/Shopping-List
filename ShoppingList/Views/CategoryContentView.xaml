<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShoppingList.Views"
             x:Class="ShoppingList.Views.CategoryContentView">
    <Frame Margin="10"
           Padding="15"
           BorderColor="#cccccc"
           CornerRadius="10"
           HasShadow="True"
           BackgroundColor="White"
           x:Name="ContentView">
        <VerticalStackLayout Spacing="10">
            <Label x:Name="CategoryLabel"
                   Text="{Binding Name}"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#333333" />

            <VerticalStackLayout x:Name="CategoryStackLayout" Spacing="5" />
        </VerticalStackLayout>
    </Frame>
</ContentView>
