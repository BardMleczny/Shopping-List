<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.AllProducts"
             Title="All Products">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add"
             Clicked="AddClicked"
             IconImageSource="{FontImage Glyph='+', Color=Black, Size=22}"/>
        <ToolbarItem Text="Export"
                     Clicked="ExportClicked"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Button Text="Select products to buy" Clicked="OnToBuyClicked"/>
                <Button Text="Select products from a shop" Clicked="OnShopClicked"/>
            </HorizontalStackLayout>
            <StackLayout x:Name="CategoriesStackLayout" Padding="10"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
